<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

        <ImageView
            android:id="@+id/iv_listmenu_image"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_listmenu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            tools:text="Food"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_listmenu_image"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_listmenu_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            tools:text="Rp. 80000"
            app:layout_constraintTop_toBottomOf="@id/tv_listmenu_name"
            app:layout_constraintStart_toEndOf="@id/iv_listmenu_image"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

</androidx.constraintlayout.widget.ConstraintLayout>